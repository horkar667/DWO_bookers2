<main>
  <div class="container">
    <div class="row">
      <div class ="col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <% if @book.errors.any? %>
        <div class="container px-5 px-sm-0">
          <div class="row">
            <div id="error_explanation" class="alert alert-danger">
              <h3 class="alert_message">
               <%= @book.errors.count %> error prohibited this obj from being saved:
              </h3>
              <ul>
                <% @book.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
        <%= form_with model:@book, local:true do |f| %>
          <div class="show-form">
            <%= f.label :title %><br>
            <%= f.text_field :title, autofocus: true, id:"inputTitle", class: "form-control book_title" %>
          </div>
          <div class="show-form">
            <%= f.label :opinion %><br>
            <%= f.text_area :body, autofocus: true, id:"inputBody", class: "form-control book_body" %>
          </div>
          <div class="show-form">
            <%= f.submit "Update Book",class: "btn btn-success" %>
          </div>
        <% end %>
        <%= link_to "Show", book_path(params[:id]), class: "edit_btn" %> | <%= link_to "Back", books_path, class: "edit_btn" %>
      </div>
    </div>
  </div>
</main>