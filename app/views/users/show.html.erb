<main>
  <!--ここから左側-->
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg' %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to "", edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
        </div>
        <h2 class="mt-3">New book</h2>
        <%= form_with model:@user, local:true do |f| %>
          <div class="show-form">
            <%= f.label :title %><br>
            <%= f.text_field :title, autofocus: true, id:"inputTitle", class: "form-control book_title" %>
          </div>
          <div class="show-form">
            <%= f.label :opinion %><br>
            <%= f.text_area :body, autofocus: true, id:"inputBody", class: "form-control book_body" %>
          </div>
          <div class="show-form">
            <%= f.submit "Create Book",class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
      <div class="col-md-8 offset-md-1"></div>
    </div>
  </div>
  <!--ここまで左側-->
</main>