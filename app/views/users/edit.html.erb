<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h2>User info</h2>
<%= form_with model:@user, url:"/users/#{@user.id}", local:true do |f| %>
 <div class="show-form">
  <%= f.label :name %><br>
  <%= f.text_field :name, autofocus: true, id:"inputName", class: "form-control book_name" %>
 </div>
 <div class="show-form">
  <%= f.label :image %><br>
  <%= f.attachment_field :profile_image %>
 </div>
 <div class="show-form">
  <%= f.label :introduction %><br>
  <%= f.text_area :introduction, autofocus: true, id:"inputIntrpduction", class: "form-control book_introduction" %>
 </div>
 <%= f.submit "Update User",class: "btn btn-secondary" %>
<% end %>
    </div>
  </div>
</div>